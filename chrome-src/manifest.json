{
    "name": "Shining colored name",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "Provide shining colored name on the Axie Infinity marketplace.",
    "content_scripts": [
        {
            "js": ["inject.js"],
            "matches": ["https://marketplace.axieinfinity.com/*"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/shining16.png",
        "32": "icons/shining32.png",
        "48": "icons/shining48.png",
        "128": "icons/shining128.png"
    }
}
